{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "esnext.asynciterable",
      "scripthost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2016",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "paths": {
      "@shopify/polaris": ["../src"]
    }
  },
  "include": [".", "../config/typescript/**/*"]
}
