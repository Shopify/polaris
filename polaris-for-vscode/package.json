{
  "name": "polaris-for-vscode",
  "displayName": "Polaris for VSCode",
  "publisher": "Shopify",
  "description": "Polaris Design System VSCode extension",
  "icon": "docs/polaris-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/polaris.git"
  },
  "homepage": "https://github.com/Shopify/polaris/blob/main/polaris-for-vscode/README.md",
  "bugs": {
    "url": "https://github.com/Shopify/polaris/issues"
  },
  "version": "0.0.1",
  "keywords": [
    "polaris",
    "shopify"
  ],
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss"
  ],
  "main": "./client/out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "generateCustomPropertyNames": "node ./scripts/prepublish.js",
    "build": "yarn run generateCustomPropertyNames && yarn run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "typescript": "^4.5.4"
  }
}
