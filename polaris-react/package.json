{
  "name": "@shopify/polaris",
  "description": "Shopifyâ€™s admin product component library",
  "version": "13.9.0",
  "private": false,
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "Shopify <dev@shopify.com>",
  "homepage": "https://polaris.shopify.com/components",
  "repository": "https://github.com/Shopify/polaris",
  "bugs": {
    "url": "https://github.com/Shopify/polaris/issues"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "files": [
    "build/",
    "!build/ts/**/*.tsbuildinfo",
    "!build/ts/**/tests/",
    "!build/ts/**/playground/",
    "locales/"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "keywords": [
    "shopify",
    "polaris",
    "react",
    "components",
    "component library"
  ],
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "esnext": "build/esnext/index.esnext",
  "types": "build/ts/src/index.d.ts",
  "scripts": {
    "build": "run-s build:types build:js build:validate",
    "build:types": "tsc -b",
    "build:js": "rollup -c",
    "build:validate": "node scripts/build-validate.js",
    "dev": "pnpm run storybook",
    "lint": "run-p lint:*",
    "lint:js": "TIMING=1 eslint --cache .",
    "lint:styles": "stylelint '**/*.{css,scss}' --quiet",
    "test": "jest",
    "clean": "rm -rf .turbo node_modules build build-internal",
    "start": "serve ./build-internal/storybook/static -l ${POLARIS_STORYBOOK_PORT:=6006}",
    "storybook": "storybook dev -p ${POLARIS_STORYBOOK_PORT:=6006} --quiet",
    "storybook:build": "storybook build -o build-internal/storybook/static",
    "storybook:test": "concurrently -k -s first -n 'SB,TEST' -c 'magenta,blue' 'http-server build-internal/storybook/static --port 6006 --silent' 'wait-on tcp:6006 && test-storybook --maxWorkers=2 polaris-react/src/components/Modal/Modal.stories.tsx'"
  },
  "dependencies": {
