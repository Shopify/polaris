    "@types/react-transition-group": "^4.4.2",
    "axe-playwright": "^2.0.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^8.1.0",
    "change-case": "^3.1.0",
    "chromatic": "^6.5.4",
