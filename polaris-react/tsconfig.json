{
  "extends": "@shopify/typescript-configs/library",
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "verbatimModuleSyntax": false,
    "outDir": "build/ts",
    "rootDir": "./",
    "strictFunctionTypes": false,
    "paths": {
      "tests/*": ["./tests/*"]
    }
  },
  "include": [
    "./src",
    "./src/**/*.json",
    "./locales/**/*.json",
    "./tests",
    "./playground",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ],
  "exclude": ["./src/components/**/*.stories.tsx"]
}
