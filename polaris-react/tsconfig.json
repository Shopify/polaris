{
  "extends": "@shopify/typescript-configs/library",
  "compilerOptions": {
    "rootDir": "./",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true,
    "outDir": "build/ts/latest",
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "strictFunctionTypes": false,
    "paths": {
      "tests/*": ["./tests/*"]
    }
  },
  "include": [
    "./config/typescript",
    "./src",
    "./src/**/*.json",
    "./locales/**/*.json",
    "./tests",
    "./playground"
  ]
}
