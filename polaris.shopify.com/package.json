{
  "name": "polaris.shopify.com",
  "version": "0.18.0",
  "private": true,
  "scripts": {
    "build": "yarn gen-assets && next build",
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:server": "open http://localhost:3000 && next dev",
    "dev:watch-md": "node scripts/watch-md.mjs",
    "lint": "run-p lint:*",
    "lint:js": "TIMING=1 eslint --cache .",
    "lint:styles": "stylelint '**/*.{css,scss}'",
    "clean": "rm -rf .turbo node_modules .next *.tsbuildinfo",
    "create-component": "generact --root src/components src/components/Template/Template.tsx",
    "gen-sitemap": "yarn next-sitemap",
    "get-props": "tsc ./scripts/get-props/src/get-props.ts --target esnext --module node16 --types \"react\" --outDir ./scripts/tmp && node ./scripts/tmp/scripts/get-props/src/get-props.js && rm -rf ./scripts/tmp",
    "gen-assets": "node scripts/gen-assets.mjs"
  },
  "dependencies": {
    "@floating-ui/react-dom-interactions": "^0.6.1",
    "@headlessui/react": "^1.6.5",
    "@shopify/polaris": "^10.3.1",
    "@shopify/polaris-icons": "^6.2.0",
    "@shopify/polaris-tokens": "^6.0.0",
    "codesandbox": "^2.2.3",
    "fuse.js": "^6.5.3",
    "gray-matter": "^4.0.3",
    "next": "12.1.0",
    "prismjs": "^1.27.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.2",
    "use-dark-mode": "^2.3.1",
    "remark-gfm": "^3.0.1",
    "framer-motion": "^6.5.1",
    "lodash.throttle": "^4.1.1"
  },
  "devDependencies": {
    "@types/gtag.js": "^0.0.10",
    "@types/js-yaml": "^4.0.5",
    "@types/marked": "^4.0.3",
    "@types/node": "17.0.21",
    "@types/prismjs": "^1.26.0",
    "@types/react": "*",
    "@types/lodash.throttle": "^4.1.7",
    "chokidar": "^3.5.3",
    "eslint-config-next": "12.1.0",
    "eslint": "8.10.0",
    "execa": "^6.1.0",
    "frontmatter": "^0.0.3",
    "get-site-urls": "3.0.0-alpha.1",
    "generact": "^0.4.0",
    "globby": "^11.1.0",
    "js-yaml": "^4.1.0",
    "marked": "^4.0.16",
    "puppeteer": "^16.0.0",
    "rehype-raw": "^6.1.1",
    "sass": "^1.49.9",
    "typescript": "^4.7.4"
  }
}
