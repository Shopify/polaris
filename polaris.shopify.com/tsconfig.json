{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "../config/ts/base",
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "module": "ESNext",
    "jsx": "preserve",
    "rootDir": "./",
    "incremental": true
  },
  "include": [
    "src",
    "**/*.json",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {"path": "../polaris-react"},
    {"path": "../polaris-tokens"}
  ]
}
