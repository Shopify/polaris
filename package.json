{
  "name": "polaris-monorepo",
  "private": true,
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.13.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "dev:components": "yarn --cwd packages/components dev",
    "dev:website": "yarn --cwd packages/website dev",
    "build:components": "yarn --cwd packages/components build",
    "build:website": "yarn --cwd packages/website build"
  },
  "devDependencies": {
    "@shopify/typescript-configs": "^5.1.0",
    "typescript": ">=3.0.0"
  }
}
