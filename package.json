{
  "name": "polaris",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^14.17.0 || ^16.13.0"
  },
  "workspaces": {
    "packages": [
      "polaris-tokens",
      "polaris-for-figma",
      "polaris-for-vscode",
      "polaris-icons",
      "polaris-react",
      "stylelint-polaris",
      "polaris.shopify.com"
    ],
    "nohoist": [
      "**/vscode-languageclient",
      "**/vscode-languageclient/**",
      "**/vscode-languageserver",
      "**/vscode-languageserver/**",
      "**/vscode-languageserver-textdocument",
      "**/vscode-languageserver-textdocument/**"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@shopify/polaris... --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "jest --watch",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier . --write",
    "type-check": "tsc --build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=polaris.shopify.com^... && changeset publish",
    "preversion": "echo \"Error: use @changsets/cli to version packages\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/node": "^7.14.9",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@next/eslint-plugin-next": "^12.1.4",
    "@shopify/babel-preset": "^24.1.2",
    "@shopify/eslint-plugin": "^41.0.1",
    "@shopify/prettier-config": "^1.1.2",
    "@shopify/stylelint-plugin": "^11.0.0",
    "@shopify/typescript-configs": "^5.1.0",
    "eslint": "^8.3.0",
    "execa": "^5.0.0",
    "jest": "^27.5.1",
    "jest-preset-stylelint": "^5.0.3",
    "jest-watch-typeahead": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "stylelint": "^14.1.0",
    "turbo": "^1.2.8",
    "typescript": ">=3.0.0"
  },
  "prettier": "@shopify/prettier-config"
}
