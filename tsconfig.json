{
  "extends": "@shopify/typescript-configs/library",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./",
    "module": "es2015",
    "declarationDir": "types",
    "declarationMap": false,
    "jsx": "react-native",
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": false
  },
  "include": ["./config/typescript/**/*", "./src/**/*", "./tests/**/*"]
}
